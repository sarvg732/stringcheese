import javafx.application.Application;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.Button;
import javafx.scene.control.TextField;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.TilePane;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.geometry.Orientation;

public class PizzaType extends Application
{
  public void start(Stage primaryStage)
  {
    //Create a border pane as the root
    BorderPane rootPane = new BorderPane();

    //centerPane is a GridPane, it contains 3 labels and 3 text fields
    GridPane centerPane = new GridPane();
    centerPane.setAlignment(Pos.CENTER);
    centerPane.setPadding(new Insets(20, 20, 20, 20));
    centerPane.setHgap(5);
    centerPane.setVgap(10);
    //Label
    Label type = new Label("Pick a Pizza Type");
    centerPane.add(type, 1, 0);

    TilePane eastPane = new TilePane(Orientation.VERTICAL);
    eastPane.setAlignment(Pos.CENTER);
    eastPane.setPadding(new Insets(20, 20, 20, 20));

	TilePane topPane = new TilePane(Orientation.HORIZONTAL);
	eastPane.setAlignment(Pos.CENTER);
    eastPane.setPadding(new Insets(20, 20, 20, 20));
    
       
       Button button1 = new Button("Cheese");
       Button button2 = new Button("Veggie");
       Button button3 = new Button("Pepperoni");
       Button button4 = new Button("Back");
       Button button5 = new Button("Next");

       //To enable the buttons to be resized to the size of the tile,
       button1.setMaxSize(Double.MAX_VALUE, Double.MAX_VALUE);
       button2.setMaxSize(Double.MAX_VALUE, Double.MAX_VALUE);
       button3.setMaxSize(Double.MAX_VALUE, Double.MAX_VALUE);
       button4.setMaxSize(Double.MAX_VALUE, Double.MAX_VALUE);
       button5.setMaxSize(Double.MAX_VALUE, Double.MAX_VALUE);
	
	 eastPane.setVgap(30.0);
     topPane.setHgap(50.0);
    
    eastPane.getChildren().addAll(button1,button2,button3);
    topPane.getChildren().addAll(button4, type, button5);
    
    rootPane.setTop(topPane);
    rootPane.setCenter(eastPane);
    
    // Create a scene and place it in the stage
    Scene scene = new Scene(rootPane, 600, 600);
    primaryStage.setTitle("Pizza Type"); // Set the stage title
    primaryStage.setScene(scene); // Place the scene in the stage
    primaryStage.show(); // Display the stage
  }
  public static void main(String[] args) {
      launch(args);
  }

}

